
    <!-- Icon tool bar placeholder -->
<%- include('partials/header') %>
    <!-- Body of manage page -->
    <div id="body-container">
            <div class="header-title">
                <h2>Create New Storage</h2>
            </div>

        <div class="type-toggle">
            <button id="fridgeBtn" class="type-btn active" onclick="selectType('fridge')">Fridge</button>
            <button id="pantryBtn" class="type-btn" onclick="selectType('pantry')">Pantry</button>
            <input type="hidden" id="storageType" name="storageType" value="1">
        </div>

        <div class="section">
            <label>Name:</label>
            <div class="field-group">
                <input type="text" id="locationname" placeholder="Enter name" />

            </div>
        </div>

        <div class="section">
            <label>Address:</label>
            <div class="field-group">
                <div class="address-fields">
                    <div class="address-field">
                        <label for="street">Street:</label>
                        <input type="text" id="street" placeholder="Enter street" />
                    </div>
                    <div class="address-field">
                        <label for="city">City:</label>
                        <input type="text" id="city" placeholder="Enter city" />
                    </div>
                    <div class="address-field">
                        <label for="province">Province:</label>
                        <input type="text" id="province" placeholder="Enter Province" />

                    </div>
                </div>
            </div>
        </div>

        <div class="section">
            <label>Upload cover photo:</label>
            <div class="photo-box">
                <button class="upload-btn"><span class="material-icons" class="upload-icon">upload</span></button>
            </div>
        </div>

        <div class="section">
            <label>Description:</label>
            <div class="field-group">
                <input type="text" id="description" placeholder="Enter Message" />

            </div>
        </div>

        <div class="actions">
            <button class="cre-back-btn">Back</button>
            <button class="cre-save-btn">Save</button>
        </div>
    </div>
    <!-- Script for toggle fridge/pantry butyon -->
    <script>
        function selectType(type) {
            const fridgeBtn = document.getElementById('fridgeBtn');
            const pantryBtn = document.getElementById('pantryBtn');
            const storageTypeInput = document.getElementById('storageType')
            
            if (type === 'fridge') {
                fridgeBtn.classList.add('active');
                pantryBtn.classList.remove('active');
                storageTypeInput.value = 1;
            } else {
                pantryBtn.classList.add('active');
                fridgeBtn.classList.remove('active');
                storageTypeInput.value = 2;


            }
        }
    </script>
<%-include('partials/footer')%>

