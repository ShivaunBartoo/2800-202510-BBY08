<%- include('partials/header') %>
    <div id="body-container">
        <div class="header-title">
            <h2>Create New Storage</h2>
        </div>
        <div id="error" class="error-message"></div>

        <form id="newStorageForm">
            <div class="type-toggle">
                <div id="fridgeBtn" class="type-btn active">Fridge</div>
                <div id="pantryBtn" class="type-btn">Pantry</div>
                <input type="hidden" id="storageType" name="storageType" value="1">
            </div>

            <div class="section">
                <label class="required">Name:</label>
                <div class="field-group">
                    <input type="text" name="title" id="title" placeholder="Enter name" required />

                </div>
            </div>

            <div class="section">
                <label>Address:</label>
                <div class="field-group">
                    <div class="address-fields">
                        <div class="address-field">
                            <label class="required" for="street">Street:</label>
                            <input type="text" name="street" id="street" placeholder="Enter street" required />
                        </div>
                        <div class="address-field">
                            <label class="required" for="city">City:</label>
                            <input type="text" name="city" id="city" placeholder="Enter city" required />
                        </div>
                        <div class="address-field">
                            <label class="required" for="province">Province:</label>
                            <input type="text" name="province" id="province" placeholder="Enter Province" required />

                        </div>
                    </div>
                </div>
            </div>

            <div class="section">
                <label>Upload cover photo:</label>
                <div class="photo-box">
                    <input type="file" name="photo" class="coverPhotoInput" accept="image/*" style="display: none;">

                    <button type="button" class="upload-btn uploadTrigger">
                        <span class="material-icons" class="upload-icon">upload</span>
                    </button>
                    <div class="photoPreview" style="display: none;">
                        <div class="image-wrapper">
                            <img class="previewImage" src="#" alt="Preview">
                            <button type="button" class="removeImageBtn">x</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="section">
                <label>Description:</label>
                <div class="field-group">
                    <input type="text" name="description" id="description" placeholder="Enter Message" />

                </div>
            </div>
            <div class="actions">
                <div class="cre-back-btn">Back</div>
                <button type="submit" class="cre-save-btn">Save</button>
            </div>

        </form>
    </div>

    <%-include('partials/footer')%>